{{ header }}
<div id="account-account" class="container content-container" style="margin-top: 80px;">
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  <div class="row">
    <div id="content" class="col-xs-12 col-sm-9">
      <h2>{{ text_my_account }}</h2>
      <ul class="list-unstyled font16">
        <li><a class="font-color-purple" href="{{ edit }}">{{ text_edit }}</a></li>
        <li><a class="font-color-purple" href="{{ password }}">{{ text_password }}</a></li>
      </ul>
    </div>
    <div class="col-sm-3 hidden-xs">
      {{ account_right }}
    </div>
  </div>
</div>
{{ footer }}